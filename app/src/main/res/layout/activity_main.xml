<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="736dp"
        android:layout_height="411dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bg" />

    <ImageView
        android:id="@+id/me"
        android:layout_width="367dp"
        android:layout_height="164dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/me" />

    <ImageView
        android:id="@+id/skill"
        android:layout_width="82dp"
        android:layout_height="84dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/skill" />

    <ImageView
        android:id="@+id/go"
        android:layout_width="205dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/go" />

    <ImageView
        android:id="@+id/villain"
        android:layout_width="390dp"
        android:layout_height="163dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/villian" />

    <TextView
        android:id="@+id/me_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/ka"
        android:text="HP-10"
        android:textAlignment="center"
        android:textColor="#32F33A"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/me_mana"
        app:layout_constraintEnd_toEndOf="@+id/me_mana"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/me_mana" />

    <TextView
        android:id="@+id/me_mana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/ka"
        android:text="MP-10"
        android:textAlignment="center"
        android:textColor="#02B0FF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/skill"
        app:layout_constraintEnd_toStartOf="@+id/go" />

    <TextView
        android:id="@+id/villain_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/ka"
        android:text="HP-10"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/villain_mana"
        app:layout_constraintEnd_toEndOf="@+id/villain_mana"
        app:layout_constraintStart_toStartOf="@+id/villain_mana" />

    <TextView
        android:id="@+id/villain_mana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:fontFamily="@font/ka"
        android:text="MP-10"
        android:textAlignment="center"
        android:textColor="#02B0FF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/me_mana"
        app:layout_constraintStart_toEndOf="@+id/go" />

    <TextView
        android:id="@+id/transmission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:fontFamily="@font/ka"
        android:text="Begin!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/go"
        app:layout_constraintEnd_toEndOf="@+id/go"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/go" />

</androidx.constraintlayout.widget.ConstraintLayout>